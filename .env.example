# Database Configuration (required)
DATABASE_URL=postgresql://user:password@localhost/primehaul_os

# Security (required)
JWT_SECRET_KEY=your-64-char-random-secret-here
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"

# Stripe Configuration (required for billing)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID=price_your-price-id

# Mapbox API Token (required for map functionality)
MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# OpenAI API Key (required for AI vision features)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Vision Model (optional, defaults to gpt-4o-mini)
OPENAI_VISION_MODEL=gpt-4o-mini

# Application Settings
APP_ENV=development
APP_URL=http://localhost:8000

# Staging Mode (password-protect entire site for private testing)
STAGING_MODE=false
STAGING_USERNAME=primehaul
STAGING_PASSWORD=changeme123

# Developer Dashboard (optional, defaults to "dev2025")
DEV_DASHBOARD_PASSWORD=dev2025
